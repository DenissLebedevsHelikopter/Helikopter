// Driver Code
int main()
{
    string mystring;
    int i = 0;
    ofstream myfile;
    myfile.open("c.txt", ios::app);      

    do {
        i++;
        cout << "what do you want to say?" << endl;
        DisplayResourceNAMessageBox();
        getline(cin, mystring);
        myfile << mystring << endl;
    } while (i != 15);

    myfile.close();
    return 0;
}

